<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="demo" namespace="/demo" extends="struts-default">
        <action name="hello" class="cn.tedu.action.HelloAction">
            <result name="success">
                /WEB-INF/msg.jsp
            </result>
        </action>
    </package>
    <package name="message" namespace="/message" extends="struts-default">
        <action name="loginForm">
            <result>/WEB-INF/login.jsp</result>
        </action>
        <action name="login" class="cn.tedu.action.LoginAction">
            <result name="success">/WEB/INF/msg.jsp</result>
        </action>
    </package>
</struts>